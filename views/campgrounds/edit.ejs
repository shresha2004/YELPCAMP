


    <% layout('/layouts/boilerplate') %>
  
<div class="row">
    <h1 class="text-center">Edit Campground</h1>
    <div class="col-6 offset-3">
        <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST" class="validated-form" novalidate enctype="multipart/form-data">
        <div class="mb-3">
            <label class="form-label" for="title">Title:</label>
            <input class="form-control" id="title" type="text" name="campgrounds[title]" value="<%= campground.title%>" required >
            <div class="valid-feedback">Looks good!</div>

        </div>
            <div class="mb-3"><label class="form-label" for="location">Location:</label>
            <input class="form-control" id="location" type="text" name="campgrounds[location]" value="<%= campground.location%>" required>
            <div class="valid-feedback">Looks good!</div>

        </div>
            <div class="mg-3">
                <label for="price">Price:</label>
            <div class="input-group mb-3">
                <span class="input-group-text" id="basic-addon1">$</span>
                <input type="text" class="form-control" placeholder="0.00" aria-label="Username" aria-describedby="basic-addon1" name="campgrounds[price]" value="<%= campground.price%>" required>
                <div class="valid-feedback">Looks good!</div>

              </div>
            </div>
                <div class="mb-3">
                    <label for="formFile" class="form-label">Upload Image:</label>
                    <input class="form-control" type="file" id="formFile" name="image" multiple >
                  </div>
            <label class="form-label" for="floatingTextarea">Description:</label>
            <div class="form-floating mb-3">
                <textarea class="form-control" placeholder="Leave a comment here" id="floatingTextarea" required name="campgrounds[description]"><%= campground.description%></textarea>
                <label for="floatingTextarea" class="text-muted">Explain here....</label>
                <div class="valid-feedback">Looks good!</div>

              </div>
              <div class="mb-3">
             <% campground.imageURL.forEach(function(imgs,i){%>
               <label for="image-<%=i%>"> <img src="<%=imgs.thumbnail%>" alt="image" class="img-thumbnail" > </label>
                <div class="form-check-inline">
                    <input type="checkbox" id="image-<%=i%>" name="deleteImages[]" value="<%=imgs.filename%>">
                </div>
                <label for="image-<%=i%>">Delete?</label>
            <%})%>
        </div>
            <button class="btn btn-info">Update Campground</button>
        </form>
    <a href="/campgrounds/<%=campground._id %>">Back to campgrounds</a>
    </div>
</div>



